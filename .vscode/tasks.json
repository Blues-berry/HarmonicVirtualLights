{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "HarmonicVirtualLights.sln",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "HarmonicVirtualLights.sln",
                "/p:Configuration=Release",
                "/p:Platform=x64"
            ],
            "group": "build",
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "HarmonicVirtualLights.sln",
                "/t:Clean",
                "/p:Configuration=Debug",
                "/p:Platform=x64"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Compile Shaders",
            "type": "shell",
            "command": "glslangValidator",
            "args": [
                "-V",
                "${file}",
                "-o",
                "${workspaceFolder}/Resources/Shaders/${fileBasenameNoExtension}.spv"
            ],
            "group": "build",
            "problemMatcher": [],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}